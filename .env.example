# LiveTrackings - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file - it contains secrets!

# === PERPLEXITY API ===
# Get your API key from https://www.perplexity.ai/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# === EMAIL SERVICE (SendGrid) ===
# Get your API key from https://sendgrid.com
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=alerts@livetrackings.com

# === SMS SERVICE (Twilio) ===
# Get your credentials from https://www.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# === TRACKING API (TrackingMore - Optional Fallback) ===
# Get your API key from https://trackingmore.com
TRACKINGMORE_API_KEY=your_trackingmore_api_key_here

# === CLOUDFLARE KV NAMESPACE IDs ===
# Get these from your Cloudflare Pages project settings
EMAIL_SUBSCRIPTIONS_KV_ID=your_kv_namespace_id_here
SMS_SUBSCRIPTIONS_KV_ID=your_kv_namespace_id_here
TRACKING_CACHE_KV_ID=your_kv_namespace_id_here

# === DATABASE (Optional) ===
# For persistent storage beyond KV (e.g., MongoDB, Supabase)
DATABASE_URL=your_database_url_here

# === ENVIRONMENT ===
ENVIRONMENT=development
DEBUG=true
